FROM centos:centos7

RUN curl -O https://d3pxv6yz143wms.cloudfront.net/java-1.8.0-amazon-corretto-devel-1.8.0_192.b12-1.amzn2.x86_64.rpm && \
    curl -O https://d3pxv6yz143wms.cloudfront.net/java-1.8.0-amazon-corretto-1.8.0_192.b12-1.amzn2.x86_64.rpm && \
    yum localinstall -y java-1.8.0-amazon-corretto*.rpm && \
    yum -y install bash && \
    yum clean all && \
    rm -rf /var/cache/yum

# Create corda user
RUN groupadd corda && \
    useradd corda -g corda -m -d /opt/corda

