# :latest for ubuntu is latest LTS release
FROM ubuntu:latest

RUN apt-get -qq update && \
    apt-get -qqy install gnupg2 locales && \
    locale-gen en_US.UTF-8

RUN apt-get update && apt-get -y upgrade && apt-get -y dist-upgrade && apt-get -y install bash

ENV LANG en_US.UTF-8
ENV LANGUAGE en_US:en
ENV LC_ALL en_US.UTF-8
#
# Pull Zulu OpenJDK binaries from official repository:
#
RUN apt-key adv --keyserver hkp://keyserver.ubuntu.com:80 --recv-keys 0xB1998361219BD9C9 && \
    echo "deb http://repos.azulsystems.com/ubuntu stable main" >> /etc/apt/sources.list.d/zulu.list && \
    apt-get -qq update && \
    apt-get -qqy install zulu-8=8.33.0.1 && \
    rm -rf /var/lib/apt/lists/*

# Create corda user
RUN addgroup corda && \
    useradd corda -g corda -m -d /opt/corda

